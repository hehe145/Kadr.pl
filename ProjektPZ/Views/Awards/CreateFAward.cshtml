@model ProjektPZ.Models.Award

@{
    ViewBag.Title = "Dodaj nagrodę";
    TempData["IDF"] = Model.Film.ID;
}

<h2>Dodaj nagrodę do filmu "@Model.Film.Title"</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nagroda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Nazwa nagrody
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Rok otrzymania
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearOfWining, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YearOfWining, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Kategoria
            <div class="col-md-10">
                @Html.EditorFor(model => model.ForWhat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ForWhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Imie osoby
            <div class="col-md-10">
                @Html.EditorFor(model => model.Persona.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Persona.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Nazwisko
            <div class="col-md-10">
                @Html.EditorFor(model => model.Persona.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Persona.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tytuł filmu
            <div class="col-md-10">
                <input class="form-control" value="@Model.Film.Title" name="Film.Title" disabled />
            </div>
        </div>
        <input class="form-control" value="01/01/2000" name="Persona.BirthDate" hidden />
        <input class="form-control" value="a" name="Persona.PlaceOfBirth" hidden />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    <a href="/Films/Details/@Model.Film.ID">Powrót do filmu</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
