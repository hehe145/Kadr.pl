@model ProjektPZ.Models.Award

@{
    ViewBag.Title = "Dodaj nagrodę";
    TempData["IDP"] = Model.Persona.ID;
}

<h2>Dodaj nagrodę do persony @Model.Persona.FirstName @Model.Persona.LastName </h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Nazwa nagrody
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Rok otrzymania
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearOfWining, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YearOfWining, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Kategoria
            <div class="col-md-10">
                @Html.EditorFor(model => model.ForWhat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ForWhat, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Za jaki film
            <div class="col-md-10">
                @Html.EditorFor(model => model.Film.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Film.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Rok premiery filmu
            <div class="col-md-10">
                @Html.EditorFor(model => model.Film.YearOfPremiere, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Film.YearOfPremiere, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Imie 
            <div class="col-md-10">
                <input class="form-control" value="@Model.Persona.FirstName" name="Persona.FirstName" disabled />
            </div>
        </div>
        <div class="form-group">
            Nazwisko
            <div class="col-md-10">
                <input class="form-control" value="@Model.Persona.LastName" name="Persona.LastName" disabled />
            </div>
        </div>

        <input class="form-control" value="?" name="Film.Description" hidden />
        <input class="form-control" value="?" name="Film.OrgTitle" hidden />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/Personas/Details/@Model.Persona.ID">Powrót do persony</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
