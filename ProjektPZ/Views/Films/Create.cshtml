@model ProjektPZ.Models.Film

@{
    ViewBag.Title = "Dodaj film";
}

<h2>Dodaj film</h2>


@using (Html.BeginForm("Create", "Films", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div >
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tytuł filmu
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tytuł oryginalny
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrgTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrgTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Rok premiery
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearOfPremiere, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YearOfPremiere, "", new { @class = "text-danger" })
            </div>
        </div>
            

            <div class="form-group">
                Opis filmu
                <div>
                    @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 60 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Dodaj plakat
                <div class="col-md-10">
                    <input type="file" name="Image" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Dodaj" class="btn btn-default" />
                </div>
            </div>
        </div>

}


<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
