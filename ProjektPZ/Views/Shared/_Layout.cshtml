<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kadr.pl</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body >
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:black">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="navbar-brand" href="/">Strona główna</a>
            </li>
            <li class="nav-item">@Html.ActionLink("Filmy", "Index", "Films", null, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Ludzie kina", "Index", "Personas", null, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Statystyki", "About", "Home",  null, new { @class = "nav-link" })</li>
            @if (Request.IsAuthenticated)
            {
                <li class="nav-item">@Html.ActionLink("Ulubione", "Favorite", "Home", null, new { @class = "nav-link" })</li>
            }
        </ul>
        
            @Html.Partial("_LoginPartial")
       
        
    </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Robert Tarczyński</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>

