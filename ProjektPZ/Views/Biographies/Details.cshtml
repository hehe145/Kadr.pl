@model ProjektPZ.Models.Biography

@{
    ViewBag.Title = "Biografia";
}

<h2>@Model.Persona.FirstName  @Model.Persona.LastName</h2>

<div style="width:50%">
    <h4>Biografia użytkownika @Model.User.UserName.Split('@')[0]</h4>
    <hr />
    <dl class="dl-horizontal">
        

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

    </dl>
</div>
<p>
    @if (Request.IsAuthenticated && User.Identity.Name.Equals(Model.User.UserName))
    {
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.ID })
    }
    @if (Context.User.IsInRole("Admin"))
    {
        @Html.ActionLink("Usuń", "Delete", new { id = Model.ID })
    }
    
    <a href="/Personas/Details/@Model.Persona.ID">Powrót do osobistości</a>
   
</p>
