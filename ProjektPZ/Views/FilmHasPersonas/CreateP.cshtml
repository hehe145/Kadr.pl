@model ProjektPZ.Models.FilmHasPersonas

@{
    ViewBag.Title = "Dodaj Film";
    TempData["IDP"] = Model.Persona.ID;
}

<h2>Dodaj film do persony @Model.Persona.FirstName @Model.Persona.LastName</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Imie
            <div class="col-md-10">
                <input class="form-control" value="@Model.Persona.FirstName" name="Persona.FirstName" disabled />
            </div>
        </div>
        <div class="form-group">
            Nazwisko
            <div class="col-md-10">
                <input class="form-control" value="@Model.Persona.LastName" name="Persona.LastName" disabled />
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Jaką rolę brała w tworzeniu filmu
            <div class="col-md-10">
                @Html.EditorFor(model => model.Function, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Function, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tytuł filmu
            <div class="col-md-10">
                @Html.EditorFor(model => model.Film.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Film.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Rok premiery filmu
            <div class="col-md-10">
                @Html.EditorFor(model => model.Film.YearOfPremiere, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Film.YearOfPremiere, "", new { @class = "text-danger" })
            </div>
        </div>

        <input class="form-control" value="?" name="Film.Description" hidden />
        <input class="form-control" value="?" name="Film.OrgTitle" hidden />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/Personas/Details/@Model.Persona.ID">Powrót</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
